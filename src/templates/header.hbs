{{#each libs}}
var {{@key}} = require('{{this}}');
{{/each}}

// clean the build dir
gulp.task('clean', function () {
  return gulp.src('{{build}}/', {read: false})
    .pipe(gulpRimraf())
    .pipe(gulpPrint());
});

// copy files not being pre-processed files
gulp.task('copy', function() {
  return gulp.src([
      '{{source}}/**/**/*.js',
      '{{source}}/**/**/*.css',
      '{{source}}/**/**/*.html',
      '{{source}}/**/**/*.jpg',
      '{{source}}/**/**/*.jpeg',
      '{{source}}/**/**/*.png',
      '{{source}}/**/**/*.gif',
      '{{source}}/**/**/*.woff',
      '{{source}}/**/**/*.ttf',
      '{{source}}/**/**/*.svg'
    ])
    .pipe(gulp.dest('{{build}}/'))
    .pipe(gulpPrint());
});
